extends ../layout

block content
  h4 Meeting Date:#{meeting.date}
  if meeting.date.toDateString() == new Date().toDateString()
    form.form-horizontal(id="signIn", role='form', method='POST')
      input(type='hidden', name='_csrf', value=token)
      .form-group
        label(class='col-sm-2 control-label', for='mnum') M#
        .col-sm-8
          input.form-control(placeholder='M0XXXXXXX', type='text', name='mnum', id='mnum')
      .form-group
        label(class='col-sm-2 control-label', for='iso') Card Swipe
        .col-sm-8
          input.form-control(placeholder='XXXXXX', type='text', name='iso', id='iso', autofocus=true)
      .form-group
        .col-sm-offset-2.col-sm-7
          button.btn.btn-success(type='submit')
            i.fa.fa-check
            | Sign In
  h5 Attendees
  table(class="table")
    thead
      tr
       th First
       th Last
    tbody
      each member in members
        tr
          td=member.profile.firstName
          td=member.profile.lastName
  script.
    $('#signIn').submit(function(evt) {
      evt.preventDefault();
      var re1='.*?';	// Non-greedy match on filler
      var re2='(\\d+)';	// Integer Number 1

      var p = new RegExp(re1+re2,["i"]);
      var m = p.exec($('#iso').val());
      if (m != null || true)
      {
          var int1 = "";
          if(m) {
            int1=m[1];
          }

          $.ajax({
            url: "/meeting/#{meeting.id}",
            type: "POST",
            data: {
              iso: int1,
              mnum: $("#mnum").val(),
              _csrf: "#{token}"
            }
          }).done(function(data) {
            if(data.error) {
              alert(data.message);
            } else {
              alert("Success");
              location.reload();
            }
          })
      }
    });